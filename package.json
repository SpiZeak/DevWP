{
  "name": "devwp",
  "version": "0.0.42",
  "description": "An Electron application with React and TypeScript for managing WordPress development environments.",
  "main": "./out/main/index.js",
  "author": "Trewhitt",
  "homepage": "https://trewhitt.au",
  "scripts": {
    "format": "biome format --write",
    "lint": "biome lint",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "bun run --bun typecheck:node && bun run --bun typecheck:web",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:integration:watch": "vitest --config vitest.config.integration.ts",
    "test:all": "npm run test:run && npm run test:integration",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch",
    "build": "bun run --bun typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "bun run --bun build && electron-builder --dir",
    "build:win": "bun run --bun build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "build:linux:verified": "bun run --bun build && electron-builder --linux && bun run --bun verify:packaged:linux",
    "verify:packaged:linux": "node scripts/verify-packaged-deps.mjs dist/linux-unpacked/resources/app.asar"
  },
  "dependencies": {
    "@colors/colors": "^1.6.0",
    "@dabh/diagnostics": "^2.0.8",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "async": "^3.2.6",
    "fecha": "^4.2.3",
    "inherits": "^2.0.4",
    "is-stream": "^4.0.1",
    "logform": "^2.7.0",
    "one-time": "^1.0.0",
    "readable-stream": "^4.7.0",
    "safe-stable-stringify": "^2.5.0",
    "stack-trace": "^0.0.10",
    "triple-beam": "^1.4.1",
    "util-deprecate": "^1.0.2",
    "winston-transport": "^4.9.0",
    "electron-updater": "^6.7.3",
    "sudo-prompt": "^9.2.1",
    "tailwindcss": "^4.1.18",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.3.9",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/ui": "^4.0.18",
    "electron": "^40.3.0",
    "electron-builder": "^26.7.0",
    "electron-devtools-installer": "^4.0.0",
    "electron-vite": "^5.0.0",
    "jsdom": "^28.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18"
  }
}
